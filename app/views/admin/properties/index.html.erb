<div class="container d-flex justify-content-center">
  <div class="card p-3 shadow-sm rounded w-100 mx-auto" style="max-width: 900px; background-color: white;">
    <div class="d-flex align-items-center gap-2 mb-3">
      <h4 class="mb-0 ms-2">Propriedades</h4>
      <%= link_to new_admin_property_path, class: "text-primary fs-5" do %>
        <i class="bi bi-plus-circle"></i>
      <% end %>
    </div>

    <div class="row g-4 justify-content-center">
      <% @properties.each do |property| %>
        <div class="col-12 col-lg-4 d-flex justify-content-center">
          <%= link_to admin_property_path(property), class: "text-decoration-none w-100 d-flex justify-content-center" do %>
            <div class="card d-flex flex-column align-items-start shadow-sm rounded-3 p-3"
                 style="width: 250px; height: 250px;">
              <!-- Ícone e nome no canto superior esquerdo -->
              <div class="d-flex align-items-center mb-3">
                <i class="bi bi-house-door fs-2 text-primary me-2"></i>
                <span class="fw-bold text-dark text-truncate" style="max-width: 180px; font-size: 1.2rem;"><%= property.name %></span>
              </div>
              <!-- Informações estáticas -->
              <div class="d-flex flex-column gap-2">
                <div class="d-flex align-items-center">
                  <i class="bi bi-gear fs-5 text-primary me-2"></i>
                  <span class="text-dark">5 Atividades de Produção</span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-list-task fs-5 text-primary me-2"></i>
                  <span class="text-dark">5 Tarefas Pendentes</span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-people fs-5 text-primary me-2"></i>
                  <span class="text-dark">3 Colaboradores</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
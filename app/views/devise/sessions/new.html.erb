<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow-lg" style="width: 400px; border-color: #28a745;">
    <div class="card-body">
      <h2 class="text-center text-success">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label text-success" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label text-success" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label text-success" %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.submit "Log in", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

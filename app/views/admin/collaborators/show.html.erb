<div class="container d-flex justify-content-center">
  <div class="card p-4 shadow-sm rounded w-100 mx-auto" style="max-width: 600px; background-color: white;">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="text-primary mb-0"><%= @collaborator.name %></h2>
      <div class="dropdown">
        <button class="btn btn-light border-0" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-three-dots"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
          <li>
            <%= button_to "Excluir", admin_collaborator_path(@collaborator_tag),
                          method: :delete,
                          data: { turbo: false, confirm: "Tem certeza?" },
                          class: "dropdown-item text-danger" %>
          </li>
        </ul>
      </div>
    </div>

    <p><strong>Tag:</strong> <%= @collaborator.tag %></p>
    <p><strong>Email:</strong> <%= @collaborator.email %></p>
    <p><strong>Função:</strong> <%= @collaborator.role.humanize %></p>

    <div class="d-flex justify-content-start mt-4">
      <%= link_to "Voltar", admin_collaborators_path, class: "btn btn-secondary", data: { turbo: false } %>
    </div>
  </div>
</div>
